<!doctype html>
<html>
  <head>
    <title>Resume creator</title>
  </head>
  <body>
    <form method="POST" action="/new">
      <input type="text" name="name" placeholder="Enter name">
      <br>
      <input type="text" name="dob" placeholder="Enter Date of Birth">
      <br>
      <input type="text" name="college" placeholder="Enter College">
      <br>
      <input type="text" name="city" placeholder="Enter city">
      <br>
      <input type="text" name="company" placeholder="Enter company">
      <br>
      <input type="text" name="position" placeholder="Enter position in company">
      <br>
      <input type="text" name="skills" placeholder="Enter skills (separated by :)">
      <br>
      <input type="submit">
    </form>
  </body>
</html>
